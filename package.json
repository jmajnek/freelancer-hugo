  "dependencies": {
    "bulma": "^0.9.1"
  },
  "devDependencies": {
    "copyfiles": "^2.4.0",
    "prettier": "^2.1.2",
    "prettier-plugin-go-template": "0.0.10",
    "rimraf": "^3.0.2"
  }
}
